@model IEnumerable<AjaxDemo.Models.Student>

Current Time=@DateTime.Now.ToLongTimeString();
<br />
<table class="table" style="border:1px solid black; background-color:silver">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalMarks)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalMarks)
            </td>

        </tr>
    }

</table>
